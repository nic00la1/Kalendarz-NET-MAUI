<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Kalendarz_NET_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Kalendarz_NET_MAUI"
    xmlns:views="clr-namespace:Kalendarz_NET_MAUI.Views"
    Title="Kalendarz_NET_MAUI"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <ShellContent
            Title="Kalendarz"
            Icon="calendar_icon.png"
            ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent
            Title="Urodziny"
            Icon="birthday_icon.png"
            ContentTemplate="{DataTemplate views:BirthdayPage}" />
    </TabBar>
</Shell>
